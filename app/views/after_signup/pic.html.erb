<article class="col-xs-12 col-sm-6">

	<h2><span class="greyedout">Username <i class="fa fa-angle-right"></i> Bio <i class="fa fa-angle-right"></i></span> Pic</h2>	

	<%= form_for @user, url: wizard_path do |f| %>
		<div class="field form-group">
			<%= f.label :pic, class:'control-label' %><br>
			<%= f.text_area :pic, class: 'form-control' %>
		</div>
		<div class="actions">
			<%= f.submit 'Next', class: 'btn btn-primary' %>
			<%= link_to 'Skip', next_wizard_path, class: 'btn btn-default' %>
		</div>
	<% end %>

</article>