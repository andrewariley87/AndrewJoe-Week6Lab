<article class="col-xs-12 col-sm-6">


	<% if defined?(notice.length) %>
		<div class="alert alert-info" role="alert">
			<%= notice %>
		</div>
	<% end %>
  <%= render partial: 'status', locals: {user: current_user} %>
<table>
  <thead>
    <tr>
    <%= render partial: 'tableheader', locals: {user: current_user} %>  
      <th colspan="3"></th>
    </tr>
  </thead>
<%= paginate @posts %>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td> <%= image_tag(post.user.pic) %> </td>
        <td><%= post.body %> Written by: <%= post.user.name %></td>
        <% if current_user%>
          <% if post.user_id != current_user.id %>
            <td>  <%= button_to 'Stop Following', unfollow_path(:id => post.id) %> </td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>


	<br>
<%= render partial: 'useractions', locals: {user: current_user} %>

</article>
